
@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h2>Administration</h2>

    <div class="row">
        <div class="col-md-8">

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Module</th>
                        <th>Records</th>
                        <th>Operations</th>
                    </tr>

                    <tr>
                        <td>1</td>
                        <td>Administrators</td>
                        <td>@ViewData["Administrators"]</td>
                        <td>
                            <a asp-action="RegisterAdmin" asp-controller="Account" asp-route-returnUrl="/administration/index" class="btn btn-info btn-simple btn-xs"><i class="fa fa-plus-square"></i></a>
                            <a asp-action="AllUsers" asp-controller="Account" asp-route-id="Admin" class="btn btn-info btn-simple btn-xs"><i class="fa fa-info-circle"></i></a>
