                        <td>
                            <a asp-action="Register" asp-controller="Account"  asp-route-returnUrl="/administration/index"  class="btn btn-info btn-simple btn-xs"><i class="fa fa-plus-square"></i></a>
                            <a asp-action="AllUsers" asp-controller="Account"  asp-route-id="business" class="btn btn-info btn-simple btn-xs"><i class="fa fa-info-circle"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td>Users</td>
                        <td>@ViewData["Users"] </td>
                        <td>
                            <a asp-action="Register" asp-controller="Account" asp-route-returnUrl="/administration/index" class="btn btn-info btn-simple btn-xs"><i class="fa fa-plus-square"></i></a>
                            <a asp-action="AllUsers" asp-controller="Account" asp-route-id="User" class="btn btn-info btn-simple btn-xs"><i class="fa fa-info-circle"></i></a>
                        </td>
                    </tr>

</table>
        </div>
    </div>

</div>